<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- size -->

    <style name="size_20_margin_10">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="size_40dp">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="size_40_margin_10_20">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="size_100">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <!-- margin style -->
    <style name="margin_5dp">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="margin_0dp_5dp">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="margin_10dp">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="margin_10_0">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="margin_0dp_10dp">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="margin_10dp_text_white_font_24dp">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="margin_10dp_text_white">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="margin_20dp">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="margin_10dp_20dp">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="margin_50dp">
        <item name="android:layout_margin">50dp</item>
    </style>


    <!-- button style -->
    <style name="signing_with_google">
        <item name="android:background">@color/google</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="signing_with_kakao">
        <item name="android:background">@color/kakao</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="signing_with_facebook">
        <item name="android:background">@color/facebook</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginBottom">80dp</item>
    </style>

</resources>
