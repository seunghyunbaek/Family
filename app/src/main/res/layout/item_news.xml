<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/margin_10dp_20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgNews"
        style="@style/size_20_margin_10"
        android:layout_height="20dp"
        android:src="@drawable/ic_mark_thin"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tvTitleNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintStart_toEndOf="@+id/imgNews"
        app:layout_constraintTop_toTopOf="@+id/imgNews"
        tools:text="공지사항과 뉴스글" />

    <TextView
        android:id="@+id/tvTimeNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvTitleNews"
        app:layout_constraintTop_toBottomOf="@+id/imgNews"
        tools:text="19년 8월 3일" />
</androidx.constraintlayout.widget.ConstraintLayout>