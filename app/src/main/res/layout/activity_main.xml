<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Activity.MainActivity">

    <LinearLayout
        style="@style/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="start|center_horizontal|left|center_vertical"
            android:layout_marginLeft="10dip"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/chicken" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:background="#008D1A1A"
            app:srcCompat="@drawable/chicken" />
    </LinearLayout>

    <LinearLayout
        style="@style/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="백승현님 안녕하세요!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="top"
            android:text="오늘은 음력 6월 18일 입니다"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/margin_10dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:orientation="vertical">

            <TextView
                style="@style/margin_10dp_text_white_font_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 가계도" />

            <TextView
                style="@style/margin_10dp_text_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가계도를 작성하고 가족,\n친지들에게 가계도를 공유해 보세요." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnMyHome"
                style="@style/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:orientation="vertical">

                <TextView
                    style="@style/margin_10dp_text_white_font_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나의 홈" />

                <TextView
                    style="@style/margin_10dp_text_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가족을 초대하고 서로 소통해 보세요." />
            </LinearLayout>

            <LinearLayout
                style="@style/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round"
                android:orientation="vertical">

                <TextView
                    style="@style/margin_10dp_text_white_font_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메세지함" />

                <TextView
                    style="@style/margin_10dp_text_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인맥들과 메세지를 주고 받을 수 있습니다." />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            style="@style/margin_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/chicken" />

        <ImageView
            style="@style/margin_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/chicken" />

        <ImageView
            style="@style/margin_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/chicken" />

        <ImageView
            style="@style/margin_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/chicken" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" />


</LinearLayout>