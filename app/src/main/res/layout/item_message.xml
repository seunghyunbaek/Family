<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/margin_10dp_20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_message_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/item_text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보낸 사람"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="보낸 사람" />

        <TextView
            android:id="@+id/item_text_sender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/item_text_sender"
            app:layout_constraintTop_toTopOf="@id/item_text_sender"
            tools:text="qwer@naver.com" />

        <TextView
            android:id="@+id/item_text_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="받는 사람"
            app:layout_constraintStart_toStartOf="@id/item_text_sender"
            app:layout_constraintTop_toBottomOf="@id/item_text_sender"
            tools:text="받는 사람" />

        <TextView
            android:id="@+id/item_text_receiver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/item_text_receiver"
            app:layout_constraintTop_toTopOf="@id/item_text_receiver"
            tools:text="asdf@gmail.com" />

        <TextView
            android:id="@+id/tv_main_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            app:layout_constraintStart_toStartOf="@id/item_text_sender"
            app:layout_constraintTop_toBottomOf="@id/item_text_receiver"
            tools:text="메세지 내용" />

        <!--<ImageView-->
        <!--android:id="@+id/viewpager_item_record"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_below="@id/tv_main_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:visibility="gone"-->
        <!--tools:srcCompat="@tools:sample/avatars" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>